{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="blockPage loginPage">
		<div class="block">
			{% for message in app.flashes('success') %}
				<div class="alert alert-success">
					{{ message }}
				</div>
			{% endfor %}

			<form method="post">
				{% if error %}
					<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				<h1 class="h3 mb-3 font-weight-normal">Veuillez vous connecter</h1>
				<div>
					<label for="inputEmail">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
				</div>
				<div>
					<label for="inputPassword">Mot de passe</label>
					{% block show_hide_password %}
						<input type="password" id="user_password" name="password" class="form-control" required>
					{% endblock show_hide_password %}
					{# <input type="checkbox" onclick="showPass()"> Afficher le mot de passe<br> #}
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<button class="btn btn-sm" type="submit">Connexion</button>
			</form>

			<div>
				<hr>
				<p>Pas de compte ?</p>
				<a class="btn btn-sm" href="{{ path('app_user_new') }}" class="dropdown-item">Cr√©ation</a>
			</div>
		</div>
	</div>

{% endblock %}

