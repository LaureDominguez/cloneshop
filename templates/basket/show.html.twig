{% extends 'base.html.twig' %}

{% block title %}Panier
{% endblock %}

{% block body %}
	<div class="blockPage">
		<div class="shopUserView">
			<h1>Panier</h1>

			{# {% if cart !empty %} #}
			<table class="table">
				<thead>
					<tr>
						<th scope="col">Article</th>
						<th scope="col">Prix</th>
						<th scope="col">Quantit√©</th>
					</tr>
				</thead>

				<tbody class="table-group-divider">
					{% for product in cart %}
						<tr>
							<td>{{ product.product.name }}</td>
							<td>{{ product.product.price }}</td>
							<td>{{ product.quantity }}</td>
						</tr>
                    {% else %}
                            </tbody>
                        </table>
                        <p colspan="5">Votre panier est vide</p>
                    {% endfor %}
                </tbody>
                <tfoot>
                    <tr>
                        <th>Total</th>
                        <td>{{ total }}</td>
                    </tr>
                </tfoot>
            </table>

</div></div>{% endblock %}
