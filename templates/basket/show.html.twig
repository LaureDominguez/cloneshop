{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <div class="blockPage">
        <div class="shopUserView">
            <h1>Panier</h1>
            {% for product in cart %}
            
                <p>{{ product.product.name }}</p>
                <p>{{ product.product.price }}</p>
                <p>{{ product.quantity }}</p>
                
            {% else %}
                    <p colspan="5">no records found</p>
            {% endfor %}
        </div>
    </div>
{% endblock %}
