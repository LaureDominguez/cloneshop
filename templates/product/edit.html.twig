{% extends 'base.html.twig' %}

{% block title %}Modifier le produit
{% endblock %}

{% block body %}
	<div class="blockPage">
		<section class="shopAdminView">
			<h1>Modifier le produit</h1>
			<div class="block-creation">
				{{ include('product/_form.html.twig', {'button_label': 'Modifier'}) }}
				<h4>Gallerie</h4>
				{% for picture in product.gallery %}
					<img src="{{ asset ('uploads/images_directory/'~picture.picture) }}" class="admin-img" alt="{{ picture.id }}">
					<a class="btn btn-sm" href="{{ path('app_img_delete', {'id': picture.id} )}}">supprimer</a>
				{% endfor %}
			</div>


			<section></div>
		{% endblock %}
